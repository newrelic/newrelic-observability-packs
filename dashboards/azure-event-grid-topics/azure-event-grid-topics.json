            "nrqlQueries": [
              {
                "accountIds": [],
                "query": "FROM Metric SELECT sum(azure.eventgrid.topics.DeliverySuccessCount) AS 'Total Delivered Events', average(azure.eventgrid.topics.DestinationProcessingDurationInMs) AS 'Avg Destination Processing Duration', sum(azure.eventgrid.topics.PublishSuccessCount) AS 'Total Published Events', sum(azure.eventgrid.topics.PublishSuccessLatencyInMs) AS 'Total Publish Success Latency', sum(azure.eventgrid.topics.PublishFailCount) AS 'Total Publish Failed Events' WHERE collector.name = 'azure-monitor' and azure.resourceType = 'microsoft.eventgrid/topics'"
              }
            ],
            "platformOptions": {
              "ignoreTimeRange": false
            }
